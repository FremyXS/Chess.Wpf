<Window x:Class="ChessGame_WPF_.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChessGame_WPF_"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" MinHeight="450" MinWidth="800"
        WindowStartupLocation="CenterScreen" WindowState="Maximized">
    <DockPanel x:Name="mainRoot" Background="BlueViolet">
        <Border DockPanel.Dock="Top">
            <TextBlock FontSize="60" Text="Chess" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        </Border>
        <Border VerticalAlignment="Center">
            <StackPanel >
                <DockPanel Margin="200 20 200 10" Name="paneNewGame">
                    <Button x:Name="newGame"  Margin="10" Content="New Game/Continue" Height="40" Click="newGame_Click"/>
                </DockPanel>
                <DockPanel Margin="200 10 200 10">
                    <Button   Margin="10" Content="Settings" Height="40" />
                </DockPanel>
                <DockPanel Margin="200 10 200 10">
                    <Button  Margin="10" Content="Exit" Height="40"/>
                </DockPanel>
            </StackPanel>
            
        </Border>
    </DockPanel>
       
</Window>
