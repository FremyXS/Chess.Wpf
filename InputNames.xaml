<Window x:Class="Chess_Game.WPF.InputNames"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Chess_Game.WPF"
        mc:Ignorable="d"
        Title="InputNames" Height="450" Width="800">
    <StackPanel>
        <Border Padding="30">
            <UniformGrid Columns="2" Rows="1">
                <TextBlock Text="Первый Игрок"/>
                <TextBox x:Name="namePlayerOne"/>
            </UniformGrid>
        </Border>        
        <Border Padding="30">
            <UniformGrid Columns="2" Rows="1">
                <TextBlock Text="Первый Игрок"/>
                <TextBox x:Name="namePlayerTwo"/>
            </UniformGrid>
        </Border>
        <Button Content="OK" Click="Button_Click"/>
    </StackPanel>
</Window>
